<%- include('./partials/header') %>

<link rel="stylesheet" type="text/css" href="/stylesheets/registerStyle.css" />
<div class="container" id="mainContainer">
  <h1 class="well" id="formHead">Prescription Note for patient name</h1>
  <form action="/user/<%= user._id %>" method="POST">
    <div class="row">
      <div class="col-sm-6 form-group">
        <label>Doctor's Name</label>
        <input
          type="text"
          name="doctorname"
          placeholder="Enter doctor's name Here.."
          class="form-control"
        />
      </div>
      <div class="col-sm-6 form-group">
        <label>Date of Checkup</label>
        <input
          type="text"
          name="date"
          placeholder="Enter date of checkup Here.."
          class="form-control"
        />
      </div>
    </div>
    <div class="form-group">
      <label>Description</label>
      <input
        type="text"
        name="note"
        placeholder="Enter prescription notes.."
        rows="3"
        class="form-control"
      />
    </div>

    <button class="btn btn-lg btn-info">Submit</button>
  </form>
</div>

<%- include('./partials/footer') %>
