<section id="content" class="container">
    <!-- Begin .page-heading -->
    <div class="page-heading" style="background-color: ivory;border-radius: 2%;margin-top: 5rem;">
        <div class="media clearfix">
          <div class="media-left pr30">
            <a href="#">
              <img class="media-object mw150" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="..." style="height: 15rem;width: 12rem;">
            </a>
          </div>                      
          <div class="media-body va-m" style="padding-top: 4rem;">
            <h2 class="media-heading"><%= doctor.firstName %> <%= doctor.lastName %>
              <small> <%= doctor.firstName %> yrs</small>
            </h2>
            <ul>
              <li>Department: <%= doctor.department  %></li>
              <li>Specialization: <%= doctor.specialization %> </li>
              <li>Blood Group: <%= doctor.blood %> </li>
            </ul>
          </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
          <div class="panel">
            <div class="panel-heading">
              <span class="panel-icon">
                <i class="fa fa-star"></i>
              </span>
              <span class="panel-title">Contact Details</span>
            </div>
            <div class="panel-body pn">
              <table class="table mbn tc-icon-1 tc-med-2 tc-bold-last">
                <tbody>
                  <tr>
                    <td>
                      <span class="fas fa-hospital-user text-info"></span>
                    </td>
                    <td>Username</td>
                    <td><%= doctor.username %></td>
                  </tr>
                  <tr>
                    <td>
                      <span class="fas fa-phone-alt text-warning"></span>
                    </td>
                    <td>Phone No.</td>
                    <td><%= doctor.phone %></td>
                  </tr>
                  <tr>
                    <td>
                      <span class="fas fa-envelope-open-text text-primary"></span>
                    </td>
                    <td>Email Add.</td>
                    <td><%= doctor.email %></td>
                  </tr>
                  <tr>
                    <td>
                      <span class="fas fa-id-card text-info"></span>
                    </td>
                    <td>Aadhar No.</td>
                    <td><%= doctor.aadhar %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          
          <div class="panel">
            <div class="panel-heading">
              <span class="panel-icon">
                <i class="fa fa-star"></i>
              </span>
              <span class="panel-title">Doctor Info</span>
            </div>
